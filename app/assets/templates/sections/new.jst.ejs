<div class="container" >
<form class="form-horizontal">
  <fieldset>
    <legend>New Section</legend>
    <div class="form-group">
      <label for="section-name" class="col-lg-2 control-label">Section Name</label>
      <div class="col-lg-3">
        <input type="text" class="form-control" id="section-name" placeholder="e.g., History, Biology B Block">
      </div>
    </div>
    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Pick From Your Classrooms</label>
      <div class="col-lg-3">
        <select class="form-control" id="select">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
