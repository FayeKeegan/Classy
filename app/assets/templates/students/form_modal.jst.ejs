
  <form class="form-horizontal">
    <button class="close">&times;</button>
    <label for="first_name"> First Name </label>
    <input class="first-field"
           type="text"
           id="first_name"
           name="student[first_name]"
           value="<%=student.get("first_name") %>">
    <label for="last"> Last Name </label>
    <input class="last-field"
           type="text"
           id="last_name"
           name="student[last_name]"
           value="<%=student.get("last_name") %>">
    <br>
    <label for="select-gender"> Gender </label>
    <select class="form-control" id="select-gender" name="student[gender]">
      <option selected=<%=(student.get("gender") === "M") %> >M</option>
      <option selected=<%=(student.get("gender") === "F") %> >F</option>
    </select>
    <label for="select-reading-level"> Reading Level </label>
    <select class="form-control" id="select-reading-level" name="student[reading_level]">
      <option selected=<%=(student.get("reading_level") === "1") %> >1</option>
      <option selected=<%=(student.get("reading_level") === "2") %> >2</option>
      <option selected=<%=(student.get("reading_level") === "3") %> >3</option>
      <option selected=<%=(student.get("reading_level") === "4") %> >4</option>
      <option selected=<%=(student.get("reading_level") === "5") %> >5</option>
    </select>
    <label for='select-math-level'> Math Level </label>
    <select class="form-control" id="select-math-level" name="student[math_level]">
        <option selected=<%=(student.get("math_level") === "1") %> >1</option>
        <option selected=<%=(student.get("math_level") === "2") %> >2</option>
        <option selected=<%=(student.get("math_level") === "3") %> >3</option>
        <option selected=<%=(student.get("math_level") === "4") %> >4</option>
        <option selected=<%=(student.get("math_level") === "5") %> >5</option>
      </select>
      <br>
    <input type="submit" class="btn btn-primary btn-sm" value="Submit">
  </form>
