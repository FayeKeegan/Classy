<div class="container">
  <div class="row">
  <form class="form-horizontal">
    <fieldset>
      <legend>New Classroom</legend>
      <div class="form-group">
        <label for="new-classroom-name" class="col-lg-2 control-label">Name</label>
        <div class="col-lg-2">
          <input type="text" class="form-control" id="new-classroom-name" placeholder="e.g. Room 101, Room 102" name="classroom[name]">
          <input type="hidden" name='classroom[width]' value='10'>
          <input type="hidden" name='classroom[height]' value='8'>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
</div>